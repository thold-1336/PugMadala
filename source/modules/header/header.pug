        .slider__right.text-center
          img(src="images/girl.png", alt="girl")

mixin header()
  header
    .menu
      .container
        .row.d-flex.align-items-center
          .col-md-12.col-lg-2.mt-2.mt-lg-0
            .site-logo.text-center.text-lg-left
              a(href="#", title="logo")
                img(src="images/logo.png")
          .col-md-12.col-lg-8
            +main-menu
          .col-md-12.col-lg-2
            ul.list-inline.menu__right.text-right
              li.list-inline-item
                a(href="#" title="cart icon")
