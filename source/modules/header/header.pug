mixin mega-menu-item(title, ...datas)
  .mega-menu__item
    h4=title
    ul.list-unstyled
      each item in datas
        li
          a(href="", title="")= item
mixin main-menu()
  .menu__main
    nav.navbar.navbar-expand-lg#navbar
      button(
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent" 
      )
        span.navbar-toggler-icon
          i.fa.fa-bars
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav
          li.nav-item.active
            a(class="nav-link", href="#", title="") Trang chủ
          li.nav-item
            a(class="nav-link", href="#", title="") Giới thiệu
          li.nav-item.active-mega
