        span TutiLe
        em  _ Giám đốc phát triển sản phẩm

mixin tab-menu(...data)
  ul.nav.justify-content-center
    each item in data
      li.nav-item
        a(href="#", title="", class="nav-link")=item

mixin social(data)
  .social__content
    each val, index in data
        a(href="#", title="").
          #[i(class="fa fa-" + val)] 
          #{index}
          
mixin product-tags(...data)
  each item in data
    a(href="", title="")=item