mixin feature-item(imgName, content)
  .feature-box__item.d-flex.justify-content-start.d-sm-inline-block
    img(src="images/" + imgName, alt="feature img", class="img-fluid mr-2 mr-sm-0")
    p= content 

mixin banner-img(imgName)
  .col-12.col-sm-6.gutter-10
    .banner-product__left--img
      a(href="#", title="")
        img(src="images/" + imgName, alt="banner product", class="img-fluid")
  
mixin banner-text(title, content)
  .col-12.col-sm-6.gutter-10
    div(class="banner-product__left--text d-flex justify-content-center align-items-center " + content)
      h3= title

mixin banner-promo(banner)
    .banner-product__left--img
      img(src="images/" + banner.imgName, alt="", class="img-fluid")
      .promo-content
        span= banner.title
        h3= banner.heading
        if banner.link
          a(href="#", title="", class="float-right")= banner.link

mixin product-block(productData)
  .product-block
    a(href="#", title="product")
      img(src="images/" + productData.imgName, alt="product", class="img-fluid")
    .product-block__caption
      h3.product-block__category
        a(href="#", title="product title")= productData.category
      h4.product-block__title= productData.title
      span.product-block__separate
      if productData.price
        span.product-block__price.
          #{productData.price} #[sup đ]
      if productData.regularPrice
        span.product-block__price--regular= productData.regularPrice
          sup.
            đ
      if productData.salePrice
        span.product-block__price--sale= productData.salePrice
          sup.
            đ
    .product-block__action.align-content-center
      a(href="#", title="", class="text-uppercase") mua hàng
      a(href="#", title="", class="text-center")
        i.fa.fa-heart
      a(href="#", title="", class="text-center")
        i.fa.fa-refresh

